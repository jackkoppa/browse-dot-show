{
  "name": "browse-dot-show",
  "version": "0.0.1",
  "private": true,
  "description": "transcribe & search any podcast",
  "scripts": {
    "all:build": "pnpm --filter @browse-dot-show/* build",
    "all:build:dev": "pnpm --filter @browse-dot-show/* build:dev",
    "all:test": "pnpm --filter @browse-dot-show/* test",
    "all:deploy": "node scripts/run-with-site-selection.js \"deployment\" \"./scripts/deploy/deploy.sh\"",
    "lint:local": "node scripts/run-with-site-selection.js \"local linting\" \"pnpm --filter @browse-dot-show/linting lint:all:local\"",
    "lint:dev-s3": "node scripts/run-with-site-selection.js \"dev-s3 linting\" \"pnpm --filter @browse-dot-show/linting lint:all:dev-s3\"",
    "client:dev": "node scripts/run-with-site-selection.js \"client development\" \"concurrently\" \"\\\"pnpm --filter @browse-dot-show/client _vite-dev\\\"\" \"\\\"pnpm --filter @browse-dot-show/client _serve-s3-assets\\\"\" \"\\\"pnpm search-lambda:dev:local\\\"\"",
    "client:build": "node scripts/run-with-site-selection.js \"client build\" \"pnpm --filter client build\"",
    "client:lint": "node scripts/run-with-site-selection.js \"client linting\" \"pnpm --filter client lint\"",
    "client:test": "node scripts/run-with-site-selection.js \"client testing\" \"pnpm --filter client test\"",
    "rss-retrieval-lambda:run:local": "node scripts/run-with-site-selection.js \"RSS retrieval (local)\" \"pnpm --filter @browse-dot-show/rss-retrieval-lambda run run:local\"",
    "rss-retrieval-lambda:run:dev-s3": "node scripts/run-with-site-selection.js \"RSS retrieval (dev-s3)\" \"pnpm --filter @browse-dot-show/rss-retrieval-lambda run run:dev-s3\"",
    "process-audio-lambda:run:local": "node scripts/run-with-site-selection.js \"audio processing (local)\" \"pnpm --filter @browse-dot-show/process-audio-lambda run run:local\"",
    "process-audio-lambda:run:dev-s3": "node scripts/run-with-site-selection.js \"audio processing (dev-s3)\" \"pnpm --filter @browse-dot-show/process-audio-lambda run run:dev-s3\"",
    "srt-indexing-lambda:run:local": "node scripts/run-with-site-selection.js \"SRT indexing (local)\" \"pnpm --filter @browse-dot-show/srt-indexing-lambda run run:local\"",
    "srt-indexing-lambda:run:dev-s3": "node scripts/run-with-site-selection.js \"SRT indexing (dev-s3)\" \"pnpm --filter @browse-dot-show/srt-indexing-lambda run run:dev-s3\"",
    "srt-indexing-lambda:test": "node scripts/run-with-site-selection.js \"SRT indexing test\" \"pnpm --filter @browse-dot-show/srt-indexing-lambda test\"",
    "search-lambda:dev:local": "node scripts/run-with-site-selection.js \"search lambda (local)\" \"pnpm --filter @browse-dot-show/search-lambda dev:local\"",
    "search-lambda:test:local": "node scripts/run-with-site-selection.js \"search lambda test\" \"pnpm --filter @browse-dot-show/search-lambda test:local\""
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.0",
    "@types/prompts": "^2.4.9",
    "tsx": "catalog:"
  },
  "dependencies": {
    "prompts": "^2.4.2"
  }
}